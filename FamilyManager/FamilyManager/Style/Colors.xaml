<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FamilyManager">

    <Color x:Key="MainBackground">#2f2c37</Color>
    <SolidColorBrush x:Key="MainBackgroundBrush" Color="{StaticResource MainBackground}"></SolidColorBrush>

    <Color x:Key="MainLightBackground">#3d3947</Color>
    <SolidColorBrush x:Key="MainLightBackgroundBrush" Color="{StaticResource MainLightBackground}"></SolidColorBrush>

    <Color x:Key="MainBorders">#3a3742</Color>
    <SolidColorBrush x:Key="MainBordersBrush" Color="{StaticResource MainBorders}"></SolidColorBrush>

    <Color x:Key="blueFont">#b7cccf</Color>
    <SolidColorBrush x:Key="blueFontBrush" Color="{StaticResource blueFont}"></SolidColorBrush>

    <Color x:Key="YellowFont">#bcbba6</Color>
    <SolidColorBrush x:Key="YellowFontBrush" Color="{StaticResource YellowFont}"></SolidColorBrush>

    <Color x:Key="OrangeFont">#fac488</Color>
    <SolidColorBrush x:Key="OrangeFontBrush" Color="{StaticResource OrangeFont}"></SolidColorBrush>

    <Color x:Key="redFont">#c66a77</Color>
    <SolidColorBrush x:Key="redFontBrush" Color="{StaticResource redFont}"></SolidColorBrush>

    <Color x:Key="GrayFont">#d5d2dd</Color>
    <SolidColorBrush x:Key="GrayFontBrush" Color="{StaticResource GrayFont}"></SolidColorBrush>

  
    
    
</ResourceDictionary>